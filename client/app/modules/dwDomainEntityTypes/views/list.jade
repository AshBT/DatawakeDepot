
.box
  .box-body.no-padding(style='min-height: 120px;')
    table.table.table-striped(st-table='displayedEntityTypes', st-safe-src='safeDisplayedentityTypes')
      thead
        tr
          th(colspan="5")
              input.input-sm.form-control(st-search='' type='search' placeholder='Search')
      thead
        tr
          th.sortable(st-sort='name' st-sort-default="true") Entity Type
          th.sortable(st-sort='description') Description
          th.sortable Domain
          th.sortable Occurrences
          th
              a.btn.btn-sm.btn-success.glyphicon.glyphicon-plus.custom(ui-sref='^.add', ng-disabled='!currentUser.isAdmin')
                  &nbsp; Add Entity Type
      tbody
        tr(ng-repeat='entityType in displayedEntityTypes')
          td(style='width: 120px')
            a(href='', ui-sref='app.dwDomainEntityTypes.view({id: entityType.id})') {{entityType.name}}
          td
            span.text-muted {{entityType.description}}
          td
            span.label.label-default {{entityType.domain.name}}
          td
            span.label.label-default {{entityType.domainItems.length}}
          td(style='width: 120px')
            .btn-toolbar
                button.btn.btn-sm.btn-default(ui-sref='app.dwDomainEntityTypes.edit({id:entityType.id})',ng-disabled='!currentUser.isAdmin')
                    i.fa.fa-pencil
                button.btn.btn-sm.btn-danger(ng-click='delete({id:entityType.id})',ng-disabled='!currentUser.isAdmin')
                    i.fa.fa-trash-o
  .overlay(ng-if='loading')
  .loading-img(ng-if='loading')
