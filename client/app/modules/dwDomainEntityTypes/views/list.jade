
.box
  .box-body.no-padding(style='min-height: 120px;')
    table.table.table-striped(st-table='displayedEntityTypes', st-safe-src='safeDisplayedentityTypes')
      thead
        tr
          th(colspan="3")
              input.input-sm.form-control(st-search='' type='search' placeholder='Search')
      thead
        tr
          th.sortable.col-sm-3.col-md-3.col-lg-3(st-sort='name' st-sort-default="true") Entity Type
          th.sortable.col-sm-3.col-md-3.col-lg-3(st-sort='description') Description
          th.sortable.col-sm-2.col-md-2.col-lg-2 Domains
          th.sortable.col-sm-2.col-md-2.col-lg-2.td-center Occurrences
          th.col-sm-2.col-md-2.col-lg-2.td-center
              a.btn.btn-sm.btn-success.glyphicon.glyphicon-plus.custom(ui-sref='^.add')
                  | Add Entity Type
      tbody
        tr(ng-repeat='entityType in displayedEntityTypes')
          td(style='width: 120px')
            a(href='', ui-sref='app.dwDomainEntityTypes.view({id: entityType.id})') {{entityType.name}}
          td
            span.text-muted {{entityType.description}}
          td
            span.label.label-ltgray {{entityType.domain.name}}
          td.td-center
            span.label.label-ltgray {{entityType.domainItems.length}}
          td.td-center(style='width: 120px')
            .btn-toolbar
                button.btn.btn-sm.btn-default(ui-sref='app.dwDomainEntityTypes.edit({id:entityType.id})')
                    i.fa.fa-pencil
                button.btn.btn-sm.btn-danger(ng-click='delete({id:entityType})',ng-disabled='!currentUser.isAdmin')
                    i.fa.fa-trash-o
  .overlay(ng-if='loading')
  .loading-img(ng-if='loading')
