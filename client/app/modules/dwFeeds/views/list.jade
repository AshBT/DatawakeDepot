
.box
  .box-body.no-padding(style='min-height: 120px;')
    table.table.table-striped(st-table='displayedfeeds', st-safe-src='safeDisplayedfeeds')
      thead
        tr
          th(colspan="8")
            input.input-sm.form-control(st-search='' type='search' placeholder='Search')
      thead
        tr
          th.sortable(st-sort='name' st-sort-default="true") Name
          th.sortable(st-sort='feedUrl') Url
          th.sortable(st-sort='serviceTypeId') ServiceType
          th.sortable(st-sort='index') Index
          th.sortable(st-sort='credentials') Credentials
          th.sortable(st-sort='protocol') Protocol
          th.sortable(st-sort='') Transmissions
          th
            a.btn.btn-sm.btn-success.glyphicon.glyphicon-plus.custom(ui-sref='^.add', ng-disabled='!currentUser.isAdmin')
              &nbsp; Add Feed
      tbody
        tr(ng-repeat='feed in displayedfeeds')
          td(style='width: 120px')
            a(href='', ui-sref='app.dwFeeds.view({id: feed.id})') {{feed.name}}
          td
            span.text-muted {{feed.feedUrl}}
          td
            span.text-muted {{feed.serviceTypeId}}
          td
            span.text-muted {{feed.index}}
          td
            span.text-muted {{feed.credentials}}
          td
            span.text-muted {{feed.protocol}}
          td.col-med-1
            a(ui-sref='app.dwTransmissions.list({id:null, feedId:feed.id})') {{feed.transmissions.length}}
          td(style='width: 120px')
            .btn-toolbar
                button.btn.btn-sm.btn-default(ui-sref='app.dwFeeds.edit({id:feed.id})',ng-disabled='!currentUser.isAdmin')
                    i.fa.fa-pencil
                button.btn.btn-sm.btn-danger(ng-click='delete({id:feed.id})',ng-disabled='!currentUser.isAdmin')
                    i.fa.fa-trash-o
  .overlay(ng-if='loading')
  .loading-img(ng-if='loading')
