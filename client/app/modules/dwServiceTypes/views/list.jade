
.box
  .box-body.no-padding(style='min-height: 120px;')
    table.table.table-striped(st-table='serviceTypes')
      thead
        //tr
        //  th
        //      input.input-sm.form-control(st-search='name' type='search' placeholder='Search across fields')
        tr
          th(st-sort='name') Name
          th(st-sort='description') Description
          th
              a.btn.btn-block.btn-success(ui-sref='^.add', ng-disabled='!currentUser.isAdmin')
                  span.glyphicon.glyphicon-plus(style="margin-right: 10px")
                  span Add ServiceType
      tbody
        tr(ng-repeat='serviceType in serviceTypes')
          td(style='width: 120px')
            a(href='', ui-sref='app.dwServiceTypes.view({id: serviceType.id})') {{serviceType.name}}
          td
            span.text-muted {{serviceType.description}}
          td(style='width: 120px')
            .btn-toolbar
                button.btn.btn-sm.btn-default(ui-sref='app.dwServiceTypes.edit({id:serviceType.id})',ng-disabled='!currentUser.isAdmin')
                    i.fa.fa-pencil
                button.btn.btn-sm.btn-danger(ng-click='delete({id:serviceType.id})',ng-disabled='!currentUser.isAdmin')
                    i.fa.fa-trash-o
  .overlay(ng-if='loading')
  .loading-img(ng-if='loading')
