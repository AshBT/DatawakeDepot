
.box
  .box-body.no-padding(style='min-height: 120px;')
    table.table.table-striped(st-table='settings')
      thead
        //tr
        //  th
        //      input.input-sm.form-control(st-search='name' type='search' placeholder='Search across fields')
        tr
          th(st-sort='name') Setting
          th(st-sort='description') Value
          th
              a.btn.btn-block.btn-success(ui-sref='^.add', ng-disabled='!currentUser.isAdmin')
                  span.glyphicon.glyphicon-plus(style="margin-right: 10px")
                  span Add Setting
      tbody
        tr(ng-repeat='setting in settings')
          td(style='width: 120px')
            a(href='', ui-sref='app.dwSettings.view({id: setting.id})') {{setting.setting}}
          td
            span.text-muted {{setting.value}}
          td(style='width: 120px')
            .btn-toolbar
                button.btn.btn-sm.btn-default(ui-sref='app.dwSettings.edit({id:setting.id})',ng-disabled='!currentUser.isAdmin')
                    i.fa.fa-pencil
                button.btn.btn-sm.btn-danger(ng-click='delete({id:setting.id})',ng-disabled='!currentUser.isAdmin')
                    i.fa.fa-trash-o
  .overlay(ng-if='loading')
  .loading-img(ng-if='loading')
