.box
    .box-body.no-padding(style='min-height: 120px;')
        table.table.table-striped(st-table='displayedSettings', st-safe-src='safedisplayedSettings')
            thead
                tr
                    th
                    th(st-sort='name') Setting
                    th(st-sort='description') Value
                tr
                    th
                        a.btn.btn-block.btn-success(ui-sref='^.add')
                            span.glyphicon.glyphicon-plus(style="margin-right: 10px")
                            span Add Setting
                    th
                        input.input-sm.form-control(st-search='setting' type='search' placeholder='search')
                    th
                        input.input-sm.form-control(st-search='value' type='search' placeholder='search')
            tbody
                tr(ng-repeat='setting in displayedSettings')
                    td(style='width: 120px')
                        .btn-group
                            button.btn.btn-sm.btn-default(ui-sref='app.dwSettings.edit({id:setting.id})')
                                i.fa.fa-pencil
                            button.btn.btn-sm.btn-danger(ng-click='delete({id:setting.id})')
                                i.fa.fa-trash-o
                    td
                        span.text-muted {{setting.setting}}
                    td
                        span.text-muted {{setting.value}}
    .overlay(ng-if='loading')
    .loading-img(ng-if='loading')
