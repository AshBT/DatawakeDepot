
.box
  .box-body.no-padding(style='min-height: 120px;')
    table.table.table-striped(st-table='displayedSettings', st-safe-src='safeDisplayedsettings')
      thead
        tr
          th
            input.input-sm.form-control(st-search='' type='search' placeholder='Search')
        tr
          th.sortable(st-sort='name' st-sort-default="true") Setting
          th.sortable(st-sort='description') Value
          th
              a.btn.btn-sm.btn-success.glyphicon.glyphicon-plus.custom(ui-sref='^.add', ng-disabled='!currentUser.isAdmin')
                &nbsp;Add Setting
      tbody
        tr(ng-repeat='setting in displayedSettings')
          td(style='width: 120px')
            a(href='', ui-sref='app.dwSettings.view({id: setting.id})') {{setting.setting}}
          td
            span.text-muted {{setting.value}}
          td(style='width: 120px')
            .btn-toolbar
                button.btn.btn-sm.btn-default(ui-sref='app.dwSettings.edit({id:setting.id})',ng-disabled='!currentUser.isAdmin')
                    i.fa.fa-pencil
                button.btn.btn-sm.btn-danger(ng-click='delete({id:setting.id})',ng-disabled='!currentUser.isAdmin')
                    i.fa.fa-trash-o
  .overlay(ng-if='loading')
  .loading-img(ng-if='loading')
