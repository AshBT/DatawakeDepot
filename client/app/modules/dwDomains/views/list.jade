
.box
  .box-body.no-padding(style='min-height: 120px;')
    table.table.table-striped(st-table='domains')
      thead
        //tr
        //  th
        //      input.input-sm.form-control(st-search='name' type='search' placeholder='Search across fields')
        tr
          th(st-sort='name') Name
          th(st-sort='description') Description
          th
              a.btn.btn-block.btn-success(ui-sref='^.add', ng-disabled='!currentUser.isAdmin')
                  span.glyphicon.glyphicon-plus(style="margin-right: 10px")
                  span Add Domain
      tbody
        tr(ng-repeat='domain in domains')
          td(style='width: 120px')
            a(href='', ui-sref='app.dwDomains.view({id: domain.id})') {{domain.name}}
          td
            span.text-muted {{domain.description}}
          td(style='width: 120px')
            .btn-toolbar
                button.btn.btn-sm.btn-default(ui-sref='app.dwDomains.edit({id:domain.id})',ng-disabled='!currentUser.isAdmin')
                    i.fa.fa-pencil
                button.btn.btn-sm.btn-danger(ng-click='delete({id:domain.id})',ng-disabled='!currentUser.isAdmin')
                    i.fa.fa-trash-o
  .overlay(ng-if='loading')
  .loading-img(ng-if='loading')
