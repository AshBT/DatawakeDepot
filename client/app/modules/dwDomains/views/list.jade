.box
    .box-body.no-padding(style='min-height: 120px;')
        table.table.table-striped(st-table='displayedDomains', st-safe-src='safedisplayedDomains')
            thead
                tr
                    th
                    th(st-sort='name') Domain Name
                    th(st-sort='description') Domain Description
                tr
                    th
                        a.btn.btn-block.btn-success(ui-sref='^.add')
                            span.glyphicon.glyphicon-plus(style="margin-right: 10px")
                            span Add Domain
                    th
                        input.input-sm.form-control(st-search='name' type='search' placeholder='search')
                    th
                        input.input-sm.form-control(st-search='description' type='search' placeholder='search')
            tbody
                tr(ng-repeat='domain in displayedDomains')
                    td(style='width: 120px')
                        .btn-group
                            button.btn.btn-sm.btn-default(ui-sref='app.dwDomains.edit({id:domain.id})')
                                i.fa.fa-pencil
                            button.btn.btn-sm.btn-danger(ng-click='delete({id:domain.id})')
                                i.fa.fa-trash-o
                    td
                        span.text-muted {{domain.name}}
                    td
                        span.text-muted {{domain.description}}
    .overlay(ng-if='loading')
    .loading-img(ng-if='loading')
