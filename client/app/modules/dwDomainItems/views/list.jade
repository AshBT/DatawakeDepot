
.box
  .box-body.no-padding(style='min-height: 120px;')
    table.table.table-striped(st-table='displayedDomainItems', st-safe-src='safeDisplayeddomainItems')
      thead
        tr
          th(colspan="4")
            input.input-sm.form-control(st-search='' type='search' placeholder='Search')
      thead
        tr
          th.sortable(st-sort='itemValue' st-sort-default="true") Value
          th.sortable(st-sort='itemType') EntityType
          th.sortable(st-sort='domainId') Domain
          th
              a.btn.btn-sm.btn-success.glyphicon.glyphicon-plus.custom(ui-sref='^.add', ng-disabled='!currentUser.isAdmin')
                  &nbsp;Add Domain Item
      tbody
        tr(ng-repeat='domainItem in displayedDomainItems')
          td
            span.text-muted {{domainItem.itemValue}}
          td(style='width: 120px')
            span.label.label-default {{domainItem.domainEntityType.name}}
          td
            span.text-muted
                a(ui-sref='app.dwDomains.list({search:domain.id})') {{domainItem.domain.name}}
          td(style='width: 120px')
            .btn-toolbar
                button.btn.btn-sm.btn-default(ui-sref='app.dwDomainItems.edit({id:domainItem.id})',ng-disabled='!currentUser.isAdmin')
                    i.fa.fa-pencil
                button.btn.btn-sm.btn-danger(ng-click='delete({id:domainItem.id})',ng-disabled='!currentUser.isAdmin')
                    i.fa.fa-trash-o
  .overlay(ng-if='loading')
  .loading-img(ng-if='loading')
