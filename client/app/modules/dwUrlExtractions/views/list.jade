
.box
  .box-body.no-padding(style='min-height: 120px;')
    table.table.table-striped(st-table='urlExtractions')
      thead
        //tr
        //  th
        //      input.input-sm.form-control(st-search='name' type='search' placeholder='Search across fields')
        tr
          th(st-sort='domainEntityTypeId') Domain EntityType
          th(st-sort='value') Value
          th(st-sort='trailId') Trail
          th
              a.btn.btn-block.btn-success(ui-sref='^.add', ng-disabled='!currentUser.isAdmin')
                  span.glyphicon.glyphicon-plus(style="margin-right: 10px")
                  span Add UrlExtraction
      tbody
        tr(ng-repeat='urlExtraction in urlExtractions')
          td(style='width: 120px')
            a(href='', ui-sref='app.dwUrlExtractions.view({id: urlExtraction.id})') {{urlExtraction.domainEntityTypeId}}
          td
            span.text-muted {{urlExtraction.value}}
          td
            span.text-muted {{urlExtraction.trailId}}
          td(style='width: 120px')
            .btn-toolbar
                button.btn.btn-sm.btn-default(ui-sref='app.dwUrlExtractions.edit({id:urlExtraction.id})',ng-disabled='!currentUser.isAdmin')
                    i.fa.fa-pencil
                button.btn.btn-sm.btn-danger(ng-click='delete({id:urlExtraction.id})',ng-disabled='!currentUser.isAdmin')
                    i.fa.fa-trash-o
  .overlay(ng-if='loading')
  .loading-img(ng-if='loading')
